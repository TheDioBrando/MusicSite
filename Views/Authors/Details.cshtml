@model RolesSiteMVC.Models.Author

@{
    ViewData["Title"] = "Details";
    List<Music> musics = (List<Music>)ViewData["Musics"];
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Information)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Information)
        </dd>
    </dl>
</div>
<label>Список песен</label>
<ul>
    @foreach(var music in musics)
    {
        <li>
            <a asp-controller="Musics" asp-action="Details" asp-route-id="@music.Id">@music.Title</a>
        </li>
    }
</ul>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
